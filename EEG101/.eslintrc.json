{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "amd": true
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "ecmaFeatures": {
      "jsx": true
    },
    "rules": {
      "react/prop-types": "off",
      "react-native/no-unused-styles": 2,
      "react-native/split-platform-components": 2,
      "react-native/no-inline-styles": 2,
      "react-native/no-color-literals": 2
    }
}
